var figgo;
(function (figgo) {
    var TranslateConfig = /** @class */ (function () {
        function TranslateConfig($translateProvider) {
            $translateProvider.useLoader('$translatePartialLoader', {
                urlTemplate: 'locales/{part}/{lang}.json?version=b75023f2'
            });
            $translateProvider
                .useSanitizeValueStrategy(null)
                .registerAvailableLanguageKeys(['de', 'en', 'es', 'fr', 'it', 'nl', 'nl-BE', 'pt'], {
                'de*': 'de',
                'en*': 'en',
                'es*': 'es',
                'fr*': 'fr',
                'it*': 'it',
                'nl-BE': 'nl-BE',
                'nl*': 'nl',
                'pt*': 'pt',
                // Required otherwise end up with no translation when determinePreferredLanguage() is not supported (eg: Portuguese)
                // https://github.com/angular-translate/angular-translate/issues/721
                '*': 'en'
            })
                .determinePreferredLanguage()
                .fallbackLanguage('en');
        }
        TranslateConfig.$inject = [
            '$translateProvider'
        ];
        return TranslateConfig;
    }());
    figgo.TranslateConfig = TranslateConfig;
})(figgo || (figgo = {}));
angular
    .module('lucca.common.luccaTranslate', [
    'pascalprecht.translate',
])
    .config(figgo.TranslateConfig);
